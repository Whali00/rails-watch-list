<h1><%= @list.name %></h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li><h4><%= bookmark.movie.title %></h4>
        <p><%= bookmark.comment %></p>
        <%= link_to "Delete", list_path(@list), class: "text-decoration-none text-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>

  <% end %>
</ul>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<%= link_to "Back to the list", lists_path, class: 'btn btn-light' %>
