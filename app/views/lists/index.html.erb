<nav class="navbar navbar-dark bg-dark d-flex">
    <p class="text-warning m-2 ms-3"><i class="fa-solid fa-ticket"></i> Watch Lists</p>
    <%= link_to "New List", new_list_path(@list), class: "text-decoration-none text-warning me-3" %>
</nav>

<div class="banner text-bg-success" style="">
  <div class="container">
    <h1>Create your lists!</h1>
    <p>Save all the movies you want to see</p>
    <%= link_to "Add a new list", new_list_path(@list), class: "btn btn-light" %>
  </div>
</div>

<div class="my-3 p-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card-category text-bg-dark rounded">
          <h5 class="card-title"><%= list.name %></h5>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
